<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/root_view"

    android:paddingStart="16dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="24dp"
    android:layout_margin="0dp"

    android:background="@drawable/background_dialog"

    android:elevation="12dp"
    app:layout_constraintCircleRadius="12dp"

    >




        <TextView

            android:id="@+id/txt_dialog_take_photo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_camera"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="@string/take_photo"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



        <TextView
            android:id="@+id/txt_dialog_choose_photo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_gallery"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="@string/choose_photo"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_dialog_take_photo"
            />

        <TextView
            android:id="@+id/txt_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="@string/close"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@color/warning"
            android:layout_gravity="right"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_dialog_choose_photo"
            />



</androidx.constraintlayout.widget.ConstraintLayout>